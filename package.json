{
  "name": "lawyer-calendar",
  "private": true,
  "version": "1.0.0",
  "description": "Lawyer Calendar - 专为律师事务所设计的日程管理系统",
  "author": "Lawyer Calendar Team",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build-electron": "npm run build && electron-builder",
    "build-win": "npm run build && electron-builder --win",
    "build-win-x86": "npm run build && electron-builder --win --ia32",
    "build-mac": "npm run build && electron-builder --mac",
    "build-all": "npm run build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@fullcalendar/vue3": "^6.1.19",
    "dayjs": "^1.11.19",
    "element-plus": "^2.11.5",
    "localforage": "^1.10.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.lawyer.calendar",
    "productName": "Lawyer Calendar",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lawyer Calendar",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    }
  }
}
